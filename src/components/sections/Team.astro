---
import SectionTitle from "../ui/SectionTitle.astro";
import TeamCard from "../ui/TeamCard.astro";
import Section from "./Section.astro";

const description =
  "Conoce el equipo que estará a cargo de desarrollar tu proyecto. Cada uno de nuestros miembros tiene una amplia experiencia en su área.";

// Team images
import p1 from "../../assets/team/t1.png";
import p2 from "../../assets/team/t2.png";
import p3 from "../../assets/team/t3.png";
import p4 from "../../assets/team/t4.png";
import p5 from "../../assets/team/t5.png";
import p6 from "../../assets/team/t6.png";

const team = [
  {
    pic: p1,
    name: "Percy Benavides",
    role: "Director Creativo and Fundador",
    description:
      "4+ años de experiencia en desarrollo de software y gestión de proyectos.",
    link: "https://linkedin.com",
  },
  {
    pic: p1,
    name: "Jose Ramírez",
    role: "Director de Operaciones and Fundador",
    description:
      "4+ años de experiencia en desarrollo de software y gestión de proyectos.",
    link: "https://linkedin.com",
  },
  {
    pic: p1,
    name: "Edwin Delgado",
    role: "Director de Desarrollo y Fundador",
    description:
      "4+ años de experiencia en desarrollo de software y gestión de proyectos.",
    link: "https://linkedin.com",
  },
];
---

<Section id="about">
  <div class="mt-[140px]">
    <SectionTitle sectionTitle="Equipo" description={description} />
    <div
      class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3  gap-10 mb-28"
    >
      {
        team.map((member, index) => (
          <TeamCard
            key={index}
            pic={member.pic}
            name={member.name}
            role={member.role}
            description={member.description}
            link={member.link}
          />
        ))
      }
    </div>
  </div>
</Section>
